#include <iostream>
#include <string>
#include <vector>
#include <stdlib.h>
using namespace std;

struct Event {
    string title;
    string location;
    int year;
    int month;
    int day;
    string time;
    string amorpm;
};

int main() {
    vector<Event> events;

    while (true) {
        int numInput = -1;

        system("cls");

        cout << "Event Creation and Management\n\nWhat would you like to do?\n\n1. Create Event\n\n2. Manage Event\n" << endl;
        cin >> numInput;

        switch (numInput) {
            case 1: {
                system("cls");

                Event event;
                cin.ignore(); // Clear newline after menu input

                cout << "What will be the name of the event?: ";
                getline(cin, event.title);

                cout << "\nWhere will the event take place?: ";
                getline(cin, event.location);

                cout << "\nWhat year will the event take place (Format: XXXX): ";
                cin >> event.year;

                cout << "\nWhich month (1 for Jan, 2 for Feb, etc.)?: ";
                cin >> event.month;

                cout << "\nOn what day?: ";
                cin >> event.day;

                cin.ignore(); // Clear newline after integer input

                cout << "\nWhat time (Format: HH:MM): ";
                getline(cin, event.time);

                cout << "\nAM or PM?: ";
                getline(cin, event.amorpm);

                system("cls");

                cout << "Congratulations! Here is the event you have created:\n" << endl;
                cout << "Event Name: " << event.title << endl;
                cout << "Event Location: " << event.location << endl;
                cout << "Event Date: " << event.month << "/" << event.day << "/" << event.year << endl;
                cout << "Event Time: " << event.time << " " << event.amorpm << endl << endl;

                system("pause");

                events.push_back(event);

                break;
            }

            case 2: {
                system("cls");

                if (events.empty()) {
                    cout << "You have no events! Choose option one to start creating events." << endl << endl;
                    system("pause");
                } else {
                    for (int i = 0; i < events.size(); i++) {
                        cout << "\nEvent Name: " << events[i].title << endl;
                        cout << "Event Location: " << events[i].location << endl;
                        cout << "Event Date: " << events[i].month << "/" << events[i].day << "/" << events[i].year << endl;
                        cout << "Event Time: " << events[i].time << " " << events[i].amorpm << endl;
                        cout << "----------------------------------------" << endl;
                    }
                    cout << endl;
                    system("pause");
                }

                break;
            }

            default: {
                system("cls");
                cout << "Invalid Option. Try again." << endl;
                system("pause");
                break;
            }
        }
    }

    return 0;
}
